{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    ".eslintrc.js",
    "*.cjs",
    "**/*.js",
    "**/*.cjs",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"],
  "extends": "./nextjs.json"
}
